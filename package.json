    "github-slugger": "^2.0.0",
    "init": "^0.1.2",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "preact": "^10.11.3",
    "query-string": "^8.1.0",
    "reading-time": "^1.5.0",
    "remark-collapse": "^0.1.2",
