{
  "name": "astro-paper",
  "version": "1.3.0",
  "private": false,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "watch": "yarn tailwindcss -i ./src/styles/global.css -o ./src/assets/styles.css --minify --watch",
    "build": "yarn tailwindcss -i ./src/styles/global.css -o ./src/assets/styles.css --minify && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format:check": "prettier --check .",
    "format": "prettier --write src/**/*.{js,css}" ,
    "cz": "cz",
    "prepare": "husky install",
    "lint": "eslint ."
  },
  "dependencies": {
    "@astrojs/rss": "^1.0.3",
    "@fontsource/poppins": "^4.5.10",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "@types/spotify-api": "^0.0.19",
    "astro": "^3.1.0",
    "autoprefixer": "^10.4.13",
    "fuse.js": "^6.6.2",
    "github-slugger": "^2.0.0",
    "init": "^0.1.2",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "preact": "^10.11.3",
    "query-string": "^8.1.0",
    "reading-time": "^1.5.0",
    "remark-collapse": "^0.1.2",
    "remark-toc": "^8.0.1",
    "tailwind-merge": "^1.8.1",
    "tailwindcss": "^3.0.24",
    "twemoji": "^14.0.2",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@astrojs/react": "^3.0.2",
    "@astrojs/sitemap": "^1.0.0",
    "@astrojs/tailwind": "^5.0.0",
    "@types/github-slugger": "^1.3.0",
    "@types/react": "^18.0.26",
    "astro-icon": "^0.8.0",
    "commitizen": "^4.2.6",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^10.2.0",
    "prettier": "^2.8.0",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,mdx,json}": [
      "prettier --plugin-search-dir=. --write"
    ]
  }
}