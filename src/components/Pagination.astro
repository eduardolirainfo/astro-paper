---
import LinkButton from "./LinkButton.astro";

export interface Props {
  pageNum: number;
  totalPages: number;
  prevUrl: string;
  nextUrl: string;
}

const { pageNum, totalPages, prevUrl, nextUrl } = Astro.props;

const prev = pageNum > 1 ? "" : "disabled";
const next = pageNum < totalPages ? "" : "disabled";
---

{
  totalPages > 1 && (
    <nav class="pagination-wrapper" aria-label="Pagination">
      <LinkButton
        disabled={prev === "disabled"}
        href={`/blog${pageNum - 1 !== 1 ? "/" + (pageNum - 1) : ""}`}
        className={`mr-4 select-none ${prev}`}
        ariaLabel="Anterior"
      >
        <svg
          stroke="currentColor"
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          viewBox="0 0 24 24"
          class={`${prev}-svg`}
        >
          <path d="M12.707 17.293 8.414 13H18v-2H8.414l4.293-4.293-1.414-1.414L4.586 12l6.707 6.707z" />
        </svg>
        Anterior
      </LinkButton>
      <div
        class="tooltip"
        data-tip={
          next === "disabled"
            ? "üéâ Parab√©ns! ü•≥ Voc√™ chegou a √∫ltima p√°gina"
            : `Voc√™ est√° na p√°gina ${pageNum} ‚û°Ô∏è Prossiga! üöÄ`
        }
      >
        {pageNum} de {totalPages}
      </div>

      <LinkButton
        disabled={next === "disabled"}
        href={`/blog/${pageNum + 1}`}
        className={`ml-4 select-none ${next}`}
        ariaLabel="Pr√≥ximo"
      >
        Pr√≥ximo
        <svg
          stroke="currentColor"
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          viewBox="0 0 24 24"
          class={`${next}-svg`}
        >
          <path d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z" />
        </svg>
      </LinkButton>
    </nav>
  )
}

<style>
  .pagination-wrapper {
    @apply mb-8 mt-auto flex justify-center;
  }

  .disabled {
    @apply pointer-events-none select-none opacity-50;
  }
</style>
